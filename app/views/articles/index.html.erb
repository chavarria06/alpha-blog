<h1>Articles listing page</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.description %></td>
                <td><%= link_to 'Show', article_path(article.id), method: :get %></td> <%# get is the default method, no need to put the method when it's a get command %>
                <td><%= link_to 'Edit', edit_article_path(article.id) %></td> <%# Get verb %>
                <td><%= link_to 'Delete', article_path(article.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<p><%= link_to 'Create New', new_article_path%></p>